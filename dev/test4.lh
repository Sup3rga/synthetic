unused mixin Actions(
    String width: 100vw,
    String height: 50vh,
    String display: block,
    String backgroundColor: red,
    final String id : "ok"
){
    @MixinActing
    {
        parentLevel: [],
        applyToChildren: true,
        style: {
            width,
            height,
            backgroundColor,
            display
        },
        event : {},
        attr: {
            id
        }
    }
}

mixin Head extends Actions(
    String height : 10vh,
    String backgroundColor : green,
    String headText: "Hello"
){
    <span>
        ${headText}
    </span>
}

