mixin List(
    Array<String> element : ["Ok"],
    JSON<String, External> event: {
        click : external(){
            console.log('[Ok]')
        }
    }
){
    <span style="padding: 1em; display: block">
        //type: event, style, attr, watch, dragThenScroll, parentAccess
        <?
        for i,j in element{
          ?>
          <span style="
            display: inline-block;
            width: 100px;
            height: 100px;
            border-radius: 8px;
            margin: 4px;
            border: 1px solid #aaa
          ">
            <slimAction type="event" content=${event}>
            <span style="
                display: block;
                height: 60px;
                text-align: center;
                line-height: 80px;
                font-size: 31px;
                font-family: 'Ubuntu mono'
            ">${i}</span>
            <span style="
                display: block;
                height: 40px;
                line-height: 40px;
                text-align: center;
                font-family: lato
            ">${j}</span>
          </span>
          <?
        }
        ?>
    </span>
}

